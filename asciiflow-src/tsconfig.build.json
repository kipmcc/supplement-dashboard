{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#asciiflow/*": ["*"]
    },
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ESNext",
    "sourceMap": false,
    "skipLibCheck": true,
    "jsx": "react",
    "lib": ["es2022", "dom"],
    "esModuleInterop": true,
    "declaration": false,
    "strictPropertyInitialization": false,
    "types": ["node", "react", "react-dom"]
  },
  "include": ["client/**/*", "common/**/*"],
  "exclude": ["bazel-*", "node_modules", "**/*.spec.ts"]
}
